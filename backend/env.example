# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=teekoob
DB_USER=postgres
DB_PASSWORD=your_password

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Google OAuth
# Use GOOGLE_OAUTH_CLIENT_IDS for multiple platforms (recommended)
GOOGLE_OAUTH_CLIENT_IDS=4861039733-db4ode2aiqps85n3t116i4eabvjrnur7.apps.googleusercontent.com,4861039733-11kdgmdpdi7anir3bpl14orven45hlhq.apps.googleusercontent.com,4861039733-hmccm6ifr07kcbk2al0a22f85f57svf8.apps.googleusercontent.com
# Or use single client ID (alternative)
# GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=teekoob-storage

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Firebase
FIREBASE_PROJECT_ID=teekoob
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# Google Play Billing
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=path_to_service_account.json

# Apple IAP
APPLE_IAP_SHARED_SECRET=your_apple_shared_secret

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# CDN
CDN_URL=https://your-cdn-domain.com
